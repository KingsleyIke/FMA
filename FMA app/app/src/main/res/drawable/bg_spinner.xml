<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryVariant"/>
                    <corners android:radius="10dp"/>
                    <padding android:right="15dp"
                        android:bottom="15dp"
                        android:top="15dp"
                        android:left="15dp"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_drop_down"
                    android:gravity="center|end" android:tint="#219653"/>
            </item>
        </layer-list>
    </item>

</selector>